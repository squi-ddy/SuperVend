<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: lightgreen;" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="SuperVend.controllers.CheckoutController">
   <Label text="Successful Checkout!">
      <font>
         <Font size="20.0"/>
      </font>
      <VBox.margin>
         <Insets top="5.0"/>
      </VBox.margin>
   </Label>
   <TextFlow textAlignment="CENTER">
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </VBox.margin>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Change: $"/>
      <Text fx:id="changeText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
   </TextFlow>
   <Label text="Bags Packed">
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </VBox.margin>
   </Label>
   <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="205.0" prefWidth="390.0"
               style="-fx-border-color: black;" styleClass="edge-to-edge" vbarPolicy="NEVER">
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </VBox.margin>
      <VBox fx:id="bagsVBox"/>
   </ScrollPane>
</VBox>
